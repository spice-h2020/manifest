{
    "@id": "treasure_hunt_0001_script",
    "_label": "Treasure Hunt",
    "@type":"Script",
    "project": {
      "@id":"spice:0001_script_project",
      "@type":"StoryBasedNarrativeProject",
      "purpose": [
        {
          "@id": "spice:00003_user_stories_list",
          "@type":"StoryBasedNarrativeList"
        }
      ]
    },
    "purpose": [
      {
        "@id":"script:engagement",
        "@type":"Goal"
      },
      {
        "@id":"script:interaction",
        "@type":"Goal"
      },
      {
        "@id":"script:storytelling",
        "@type":"Goal"
      },
      {
        "@id":"script:reflection",
        "@type":"Goal"
      }
    ],
    "stage": [
      {
        "@id": "spice:0001_preparation",
        "@type":"Preparation",
        "_label": "The selection of artworks used for each stage of the treasure-hunt.",
        "task": [
          {
            "@id": "spice:0001_treasure_hunt_artefacts_selection",
            "@type":["ArtefactsSelection","MultimediaSelection"],
            "_label": "The curators create a list of pictures of artefacts to be shown to users.",
            "precedes":{"@id":"spice:0001_treasure_hunt_questionnaire_preparation"},
            "task_role":{"@id":"script:curator"},
            "input": {
              "@id": "spice:0001_mncn_artefact",
              "belongs_to":"Artefact"
            },
            "output": {
              "@id": "spice:0001_mncn_artefact",
              "belongs_to":"narrative:List"
            }
          },
          {
            "@id": "spice:0001_treasure_hunt_activity_preparation",
            "@type":["Design"], 
            "_label": "The curators design the number of stage and each activity for each stage of the treasure hunt.",
            "precedes":{"@id":"spice:0001_artefact_presentation"},
            "task_role":{"@id":"script:curator"},
            "input": {
              "@id": "spice:0001_mncn_artefact",
              "belongs_to":"Artefact"},
            "output": {
              "id": "script:0001_mncn_treasure_hunt_designed_activities",
              "belongs_to":"Text"
            }
            }
        ]
      },
      {
        "@id": "spice:0001_running",
        "@type":"Running",
        "_label": "The activity takes place. Users go through each stage of the treasure hunt until its end.",
        "task": [
          {
            "@id": "spice:0001_artefact_presentation",
            "@type":"PresentationCuratorialContents",
            "_label": "The first curatorial content or set of curatorial contents is presented to the user with factual information.",
            "precedes":[{"@id":"spice:0001_artefact_presentation"}, {"@id": "spice:0001_user_free_text_answering"}, {"@id":"spice:0001_user_multiple_choice_answering"}, {"@id":"spice:0001_user_artefact_drawing"}, {"@id":"spice:0001_emoji_answering"}],
            "follows":[{"@id":"spice:0001_artefact_presentation"}, {"@id": "spice:0001_user_free_text_answering"}, {"@id":"spice:0001_user_multiple_choice_answering"}, {"@id":"spice:0001_user_artefact_drawing"}, {"@id":"spice:0001_emoji_answering"}],
            "task_role":{"@id":"script:curator"},
            "input": {
              "@id": "spice:0001_mncn_artwork",
              "belongs_to":"Artefact"
            }
          },
          {
            "@id": "spice:0001_user_free_text_answering",
            "@type":"FreeTextAnswering",
            "_label": "The user may answer to an open question about an artwork.",
            "precedes":[{"@id":"spice:0001_artefact_presentation"}, {"@id": "spice:0001_user_free_text_answering"}, {"@id":"spice:0001_user_multiple_choice_answering"}, {"@id":"spice:0001_user_artefact_drawing"}, {"@id":"spice:0001_emoji_answering"}],
            "follows":[{"@id":"spice:0001_artefact_presentation"}, {"@id": "spice:0001_user_free_text_answering"}, {"@id":"spice:0001_user_multiple_choice_answering"}, {"@id":"spice:0001_user_artefact_drawing"}, {"@id":"spice:0001_emoji_answering"}],
            "task_role":{"@id":"script:software-agent"},
            "input": {
              "@id": "spice:0001_mncn_questionnaire_question",
              "belongs_to":"Text"
            },
            "conditional_output": {
              "@id": "spice:0001_mncn_questionnaire_answer",
              "belongs_to":"Text"
            }
          },
          {
            "@id": "spice:0001_user_multiple_choice_answering",
            "@type":"MultipleChoiceAnswering",
            "_label": "The user may answer to a multiple choice question about an artwork.",
            "precedes":[{"@id":"spice:0001_artefact_presentation"}, {"@id": "spice:0001_user_free_text_answering"}, {"@id":"spice:0001_user_multiple_choice_answering"}, {"@id":"spice:0001_user_artefact_drawing"}, {"@id":"spice:0001_emoji_answering"}],
            "follows":[{"@id":"spice:0001_artefact_presentation"}, {"@id": "spice:0001_user_free_text_answering"}, {"@id":"spice:0001_user_multiple_choice_answering"}, {"@id":"spice:0001_user_artefact_drawing"}, {"@id":"spice:0001_emoji_answering"}],
            "task_role":{"@id":"script:software-agent"},
            "input": {
              "@id": "spice:0001_mncn_questionnaire_question",
              "belongs_to":"Text"
            },
            "conditional_output": {
              "@id": "spice:0001_mncn_questionnaire_answer",
              "belongs_to":"Text"
            }
          },
          {
            "@id": "spice:0001_user_artefact_drawing",
            "@type":"PictureProduction",
            "_label": "The user may observe the artwork and draw some particular part or detail of it.",
            "precedes":[{"@id":"spice:0001_artefact_presentation"}, {"@id": "spice:0001_user_free_text_answering"}, {"@id":"spice:0001_user_multiple_choice_answering"}, {"@id":"spice:0001_user_artefact_drawing"}, {"@id":"spice:0001_emoji_answering"}],
            "follows":[{"@id":"spice:0001_artefact_presentation"}, {"@id": "spice:0001_user_free_text_answering"}, {"@id":"spice:0001_user_multiple_choice_answering"}, {"@id":"spice:0001_user_artefact_drawing"}, {"@id":"spice:0001_emoji_answering"}],
            "task_role":{"@id":"script:web-user"},
            "input": {
              "@id": "spice:0001_mncn_artefact",
              "belongs_to":"Artefact"
            },
            "conditional_output": {
              "@id": "spice:00003_gam_selected_image",
              "belongs_to":"Image"
            }
          },
          {
            "@id": "spice:0001_emoji_answering",
            "@type":"AddEmoticon",
            "_label": "Users add an emoticon reaction related to the some artefact.",
            "precedes":[{"@id":"spice:0001_artefact_presentation"}, {"@id": "spice:0001_user_free_text_answering"}, {"@id":"spice:0001_user_multiple_choice_answering"}, {"@id":"spice:0001_user_artefact_drawing"}, {"@id":"spice:0001_emoji_answering"}],
            "follows":[{"@id":"spice:0001_artefact_presentation"}, {"@id": "spice:0001_user_free_text_answering"}, {"@id":"spice:0001_user_multiple_choice_answering"}, {"@id":"spice:0001_user_artefact_drawing"}, {"@id":"spice:0001_emoji_answering"}],
            "task_role":{"@id":"script:web-user"},
            "input": {
              "@id": "spice:00003_gam_selected_image",
              "belongs_to":"Photograph"
            },
            "conditional_output": {
              "@id": "spice:00003_user_emoji",
              "belongs_to":"Text"
            }
          }
        ]
      }
    ],
    "@context": "https://github.com/spice-h2020/manifest/tree/main/context.json"
  }
  